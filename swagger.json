{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Transferências e Usuários",
    "version": "1.0.0",
    "description": "API para login, registro, consulta de usuários e transferências. As rotas de transferências requerem autenticação JWT via Bearer token."
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token obtido através do endpoint /users/login"
      }
    }
  },
  "paths": {
    "/users/register": {
      "post": {
        "summary": "Registrar novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "favorecidos": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário criado" },
          "400": { "description": "Erro de validação ou usuário já existe" }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Login de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": { "type": "string" },
                    "favorecidos": { "type": "array", "items": { "type": "string" } },
                    "saldo": { "type": "number" },
                    "token": { "type": "string", "description": "JWT token para autenticação nas rotas protegidas" }
                  }
                }
              }
            }
          },
          "400": { "description": "Usuário ou senha inválidos" }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Listar usuários",
        "responses": {
          "200": { "description": "Lista de usuários" }
        }
      }
    },
    "/transfers": {
      "post": {
        "summary": "Realizar transferência",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "from": { "type": "string" },
                  "to": { "type": "string" },
                  "value": { "type": "number" }
                },
                "required": ["from", "to", "value"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Transferência realizada" },
          "400": { "description": "Erro de validação ou regra de negócio" },
          "401": { 
            "description": "Token de acesso requerido ou usuário não encontrado",
            "content": {
              "application/json": {
                "examples": {
                  "sem_token": {
                    "summary": "Token não fornecido",
                    "value": { "error": "Token de acesso requerido. Use: Authorization: Bearer {token}" }
                  },
                  "usuario_removido": {
                    "summary": "Usuário foi removido do sistema",
                    "value": { "error": "Usuário não encontrado ou foi removido do sistema" }
                  }
                }
              }
            }
          },
          "403": { "description": "Token inválido ou expirado" }
        }
      },
      "get": {
        "summary": "Listar transferências",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": { "description": "Lista de transferências" },
          "401": { 
            "description": "Token de acesso requerido ou usuário não encontrado",
            "content": {
              "application/json": {
                "examples": {
                  "sem_token": {
                    "summary": "Token não fornecido",
                    "value": { "error": "Token de acesso requerido. Use: Authorization: Bearer {token}" }
                  },
                  "usuario_removido": {
                    "summary": "Usuário foi removido do sistema",
                    "value": { "error": "Usuário não encontrado ou foi removido do sistema" }
                  }
                }
              }
            }
          },
          "403": { "description": "Token inválido ou expirado" }
        }
      }
    }
  }
}
